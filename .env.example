# Q槽路徑設置
Q_DRIVE_PATH="Q:/"

# OpenAI API設置
OPENAI_API_KEY="YOUR_API_KEY_HERE"  # OpenAI API密鑰
OPENAI_MODEL="gpt-4"                # 使用的OpenAI模型

# 向量數據庫設置
VECTOR_DB_PATH="./vector_db"  # 向量數據庫保存路徑

# 文件類型設置
SUPPORTED_FILE_TYPES=

# 應用設置
APP_HOST="0.0.0.0"  # API主機地址
APP_PORT=8000       # API端口
STREAMLIT_PORT=8501 # Streamlit前端端口

# 其他設置
LOG_LEVEL="INFO"  # 日誌級別
MAX_TOKENS_CHUNK=1500      # 文本塊大小
CHUNK_OVERLAP=100          # 塊重疊大小
SIMILARITY_TOP_K=4  # 相似度檢索返回的文檔數量

# 索引效能優化設置
MAX_WORKERS=0              # 同時處理線程數 (0表示自動決定)
EMBEDDING_BATCH_SIZE=8     # 嵌入批處理大小
FILE_BATCH_SIZE=20         # 文件批處理大小

# Ollama設置
USE_OLLAMA=false                        # 是否使用Ollama而非OpenAI
OLLAMA_HOST="http://localhost:11434"    # Ollama服務地址
OLLAMA_MODEL="llama3.2"                 # Ollama模型名稱
OLLAMA_EMBEDDING_MODEL="llama3.2"       # Ollama嵌入模型名稱
